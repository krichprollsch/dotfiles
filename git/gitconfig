    insteadOf="https://git.blueboard.io/"
[user]
	email = pierre@blueboard.io
	name = Pierre Tachoire
	signingkey = B868722B27758E34A6097AF8A387EEA469596030
[merge]
	tool = meld
[color]
	diff = true
	ui = true
[mergetool "meld"]
    cmd = meld --diff \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[mergetool]
	trustExitCode = false
[core]
	editor = vi
	excludesfile = ~/.gitignore
[alias]
	slog = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)    %an%Creset' --abbrev-commit
	lg = log --name-only
	st = status
	stu = status -u
	ffm = merge --ff-only
	noffm = merge --no-ff
    drop = !sh -c 'git branch -d $2 && git push $1 :${2}' -
    ffdrop = !sh -c 'git ffm $2 && git push $1 master && git drop $1 $2' -
    noffdrop = !sh -c 'git noffm $2 && git push $1 master && git drop $1 $2' -
    rbpush = !sh -c 'git fetch $1 && git checkout $2 && git pull $1 $2 && git rebase master && git push -f $1 $2 && git checkout master' -
    fpush = !sh -c 'git push -f $1 $2' -
[diff]
	tool = vimdiff
[pull]
	rebase = preserve
[credential "https://git.blueboard.io"]
	username = pierre
[url "git@git.blueboard.io:blueboard/"]
	insteadOf = bb:
[url "git@git.blueboard.io:pierre/"]
	insteadOf = pierre:
[commit]
	gpgsign = true
[tag]
	sort = version:refname
